<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/white_clickable_bg">
    
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/drop_down_dlg_item_icon"
        android:layout_marginLeft="18dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/drop_down_dlg_item_desc"
        android:layout_toRightOf="@+id/drop_down_dlg_item_icon"
        android:layout_marginLeft="18dp"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:gravity="center_vertical|left"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/drop_down_dlg_divider"
        android:layout_alignParentBottom="true"
        android:id="@+id/drop_down_dlg_item_divider"/>

</RelativeLayout>
