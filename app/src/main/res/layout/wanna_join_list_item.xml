<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/wjli_rl_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="10dp">

        <com.elong.tourpal.imageasyncloader.view.CustomImageView
            android:id="@+id/wjli_iv_avatar"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentLeft="true"
            android:src="@android:drawable/ic_menu_report_image" />

        <TextView
            android:id="@+id/wjli_tv_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/wjli_iv_avatar"
            android:gravity="center"
            android:textColor="@color/mi_item_nick_name_text"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/wjli_tv_sex_and_age"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:layout_alignTop="@+id/wjli_tv_nick_name"
            android:layout_toRightOf="@+id/wjli_tv_nick_name"
            android:background="@drawable/bg_female"
            android:drawableLeft="@mipmap/ic_female"
            android:drawablePadding="3dp"
            android:text="26"
            android:textColor="@color/white"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/wjli_tv_created_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:textColor="@color/mi_item_wanna_join_text"
            android:textSize="12dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:id="@+id/wjli_tv_contact_info_hide"
            android:gravity="center"
            android:background="@color/wjli_contact_info_bg"
            android:layout_toRightOf="@+id/wjli_iv_avatar"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="@string/wanna_join_list_item_contact_info_hide"
            android:textSize="14dp"
            android:textColor="@color/mi_item_contacts_text_normal"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/wjli_rl_contact_infos"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/wjli_contact_info_bg"
            android:layout_toRightOf="@+id/wjli_iv_avatar"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/wjli_ll_contact_info_line1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/wjli_tv_wechat"
                    android:drawableLeft="@mipmap/ic_wechat_small"
                    android:drawablePadding="5dp"
                    android:text="未填写"
                    android:textSize="11dp"
                    android:textColor="@color/mi_item_contacts_text_normal"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/wjli_tv_qq"
                    android:drawableLeft="@mipmap/ic_qq_small"
                    android:drawablePadding="5dp"
                    android:text="未填写"
                    android:textSize="11dp"
                    android:textColor="@color/mi_item_contacts_text_normal"/>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wjli_tv_phone"
                android:drawableLeft="@mipmap/ic_phone_small"
                android:drawablePadding="5dp"
                android:layout_alignLeft="@+id/wjli_ll_contact_info_line1"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/wjli_ll_contact_info_line1"
                android:text="未填写"
                android:textSize="11dp"
                android:textColor="@color/mi_item_contacts_text_normal"/>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:id="@+id/wjli_separator"
        android:layout_marginLeft="12dp"
        android:layout_below="@id/wjli_rl_top"
        android:layout_marginTop="10dp"
        android:background="@color/mi_item_divider"/>

</RelativeLayout>
