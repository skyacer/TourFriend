<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/common_titlebar_height"
    android:id="@+id/title_root"
    android:background="@drawable/default_title_bar_bg"
    android:layout_alignParentTop="true">

    <LinearLayout
        android:id="@+id/titlebar_left_container"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/title_iv_left"
            android:layout_width="@dimen/common_titlebar_left_height"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:src="@drawable/select_titlebar_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/title_tv_left"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/common_titlebar_title_left_right_size"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/titlebar_center_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/title_tv_text"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center"
            android:text="title"
            android:textColor="@color/white"
            android:textSize="@dimen/common_titlebar_title_text_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/titlebar_right_container"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/title_tv_right"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/common_titlebar_title_left_right_size"
            android:background="@drawable/select_titlebar_block"/>

        <ImageView
            android:id="@+id/title_iv_right"
            android:layout_width="@dimen/common_titlebar_right_height"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:src="@drawable/select_titlebar_post"/>
    </LinearLayout>

</RelativeLayout>
