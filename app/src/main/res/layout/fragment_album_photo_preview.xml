<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:id="@+id/photo_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">
            <CheckBox
                android:id="@+id/posting_preview_selected"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_margin="3dp"
                android:focusable="false"
                android:layout_gravity="center_vertical"
                android:background="@drawable/select_posting_photo"
                style="@style/PhotoCheckBoxTheme"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/posting_main_text_size_2"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:textColor="@color/white"
                android:text="@string/posting_preview_select"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>