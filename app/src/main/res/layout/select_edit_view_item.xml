<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="3dp"
    android:background="@drawable/select_edit_item_bg">

    <TextView
        android:id="@+id/select_edit_view_select_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/posting_main_text_size_1"
        android:textColor="@color/tourpal_red">
    </TextView>

    <ImageView
        android:id="@+id/select_edit_view_select_delete"
        android:layout_width="@dimen/select_edit_item_delete_width"
        android:layout_height="@dimen/select_edit_item_delete_width"
        android:src="@drawable/icon_select_edit_delete">
    </ImageView>

</LinearLayout>